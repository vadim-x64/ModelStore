<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ModelStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ModelStore.styles.css" asp-append-version="true" />
</head>
<style>
    .profile-pic-small {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        object-fit: cover;
    }
</style>
<body>
    <header class="p-3 mb-3 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a class="navbar-brand d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none"
                   asp-area="" asp-controller="Home" asp-action="Index">ModelStore</a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a class="nav-link px-2 link-body-emphasis" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="nav-link px-2 link-body-emphasis" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    <li><a class="nav-link px-2 link-body-emphasis" asp-area="" asp-controller="Home" asp-action="Cart">Cart</a></li>
                </ul>

                <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                    <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
                </form>

                <div class="text-end">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                @if (ViewData["ProfilePicture"] != null)
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String((byte[])ViewData["ProfilePicture"])"
                                         alt="Profile Picture" class="profile-pic-small" />
                                }
                                else
                                {
                                    <span>@User.Identity.Name</span>
                                }
                            </a>
                            <ul class="dropdown-menu text-small">
                                <li>
                                    <a class="dropdown-item"
                                       href="@Url.Action(User.IsInRole("2") ? "Admin" : "Profile", "Home")">Profile</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="nav-link link-body-emphasis" asp-controller="Home" asp-action="Logout">Logout</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="nav-link link-body-emphasis" asp-controller="Home" asp-action="Login">Login</a>
                    }
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0", user-scalable="no" />
    <title>ModelStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/_layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ModelStore.styles.css" asp-append-version="true" />
</head>
<body class="fade-in">
    <header>
        <div class="main-container">
            <div class="header-wrapper">
                <div class="logo-nav-wrapper">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logox.png" class="logotype" />
                    </a>
                    <ul class="nav-menu">
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Forum">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-info-square" viewBox="0 0 16 16">
                                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                                </svg>
                                Форум
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contacts">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-people" viewBox="0 0 16 16">
                                    <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1zm-7.978-1L7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002-.014.002zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0M6.936 9.28a6 6 0 0 0-1.23-.247A7 7 0 0 0 5 9c-4 0-5 3-5 4q0 1 1 1h4.216A2.24 2.24 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816M4.92 10A5.5 5.5 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0m3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4" />
                                </svg>
                                Контакти
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="search-wrapper">
                    <form class="search-form" role="search">
                        <input type="search" class="form-control" placeholder="Пошук..." aria-label="Search">
                    </form>
                </div>
                <div class="user-menu">
                    <a class="cart-link" asp-area="" asp-controller="Home" asp-action="Cart">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                            <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                        </svg>
                    </a>
                    <div class="auth-section">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <a href="#" class="user-dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    @if (ViewData["ProfilePicture"] != null)
                                    {
                                        <img src="data:image/png;base64,@Convert.ToBase64String((byte[])ViewData["ProfilePicture"])" class="profile-pic-small" />
                                    }
                                    else
                                    {
                                        <span>@User.Identity.Name</span>
                                    }
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action(User.IsInRole("2") ? "Admin" : "Profile", "Home")">Профіль</a>
                                    </li>
                                    <li class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Logout">Вихід</a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="nav-link log" asp-controller="Home" asp-action="Login">Увійти</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main class="main-content">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/_layout.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@model List<ModelStore.Models.CartItem>

<h2>Shopping Cart</h2>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="data:image/png;base64,@Convert.ToBase64String(item.Product.Photo)"
                                 style="max-width: 50px;" alt="Product Image">
                            @item.Product.Name
                        </td>
                        <td>@item.Product.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@((item.Product.Price * item.Quantity).ToString("C"))</td>
                        <td>
                            <button class="btn btn-danger btn-sm"
                                    onclick="removeFromCart(@item.ProductId)">
                                Remove
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-warning btn-sm" onclick="removeOneFromCart(@item.ProductId)">
                                Remove 1 item
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right"><strong>Total:</strong></td>
                    <td>
                        @Model.Sum(i => i.Product.Price * i.Quantity).ToString("C")
                    </td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="text-right">
        <button class="btn btn-danger" onclick="clearCart()">
            Видалити весь кошик
        </button>
    </div>

    <a href="@Url.Action("Checkout", "Home")" class="btn btn-success btn-lg">
        <i class="fas fa-shopping-cart"></i> Оформити замовлення
    </a>
}
else
{
    <p>Your cart is empty.</p>
}

@section Scripts {
    <script>
        function clearCart() {
            if (confirm('Ви впевнені, що хочете видалити весь кошик?')) {
                $.post('@Url.Action("ClearCart", "Home")')
                    .done(function() {
                        location.reload();
                    });
            }
        }

        function removeFromCart(productId) {
            if (confirm('Are you sure you want to remove this item?')) {
                $.post('@Url.Action("RemoveFromCart", "Home")', { productId: productId })
                    .done(function() {
                        location.reload();
                    });
            }
        }

        function removeOneFromCart(productId) {
            $.post('@Url.Action("RemoveOneFromCart", "Home")', { productId: productId })
                .done(function() {
                    location.reload();
                });
        }
    </script>
}
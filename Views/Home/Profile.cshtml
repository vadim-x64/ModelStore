        border: 1px solid #ddd;
        border-radius: 8px;
    }

    .comments-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        background: #f8f9fa;
        cursor: pointer;
        border-radius: 8px 8px 0 0;
    }


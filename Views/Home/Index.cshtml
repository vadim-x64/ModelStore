@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<div class="categories-grid">
    @if (ViewData["Categories"] is List<ModelStore.Models.Category> categories)
    {
        foreach (var category in categories)
        {
            <div class="category-card">
                <div class="image-container">
                    <img src="data:image/png;base64,@Convert.ToBase64String(category.Photo)" class="category-image" alt="@category.Name">
                </div>
                <div class="category-body">
                    <h5 class="category-title">
                        <a href="@Url.Action("AllProducts", "Home", new { categoryId = category.Id })" class="category-link">@category.Name</a>
                    </h5>
                </div>
            </div>
        }
    }
</div>

<div class="empty-section">
    <div class="line-container">
        <div class="line"></div>
        <div class="gif-container">
            <img src="~/images/content.gif" alt="Empty state" style="width: 100%; height: 100%;">
        </div>
        <div class="line"></div>
    </div>
    <p class="empty-text">Тут поки пусто</p>
</div>